
@model Employee_Management_System.Models.ViewModels.UpdateEmployeeViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Update Employee";
}
<h2 class="my-4">Update Employee Details</h2>

@using (Html.BeginForm("UpdateEmployee", "Employee", FormMethod.Post, new { @class = "needs-validation", enctype = "multipart/form-data", novalidate = "novalidate" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.EmployeeId)
    <div class="form-group mb-3 col-3">
        @Html.LabelFor(model => model.Name, new { @class = "form-label" })
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Name" })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group mb-3 col-3">
        @Html.LabelFor(model => model.Email, new { @class = "form-label" })
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Enter Email" })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>



    <div class="form-group mb-3 col-3">
        @Html.LabelFor(model => model.ImageUrl, new { @class = "form-label" })
        @Html.TextBoxFor(model => model.ImageUrl, new { @class = "form-control", placeholder = "ImgUrl" })
    </div>

    <div class="form-group mb-3 col-3">
        @Html.LabelFor(model => model.Address, new { @class = "form-label" })
        @Html.TextBoxFor(model => model.Address, new { @class = "form-control", placeholder = "Address" })
    </div>
    <div class="form-group mb-3 col-3">
        @Html.LabelFor(model => model.Phone, new { @class = "form-label" })
        @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", placeholder = "PhoneNumber" })
    </div>
    <div class="d-flex align-content-center ">

        <button type="submit" class="btn btn-primary">Update Employee</button>
        <a href="@Url.Action("EmployeeList", "Employee")" class="btn btn-primary ms-4">Back</a>

    </div>
}